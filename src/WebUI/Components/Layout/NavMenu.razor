@using Domain.Configs

<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="">EventHub Explorer</a>
    </div>
</div>

<input type="checkbox" title="Navigation menu" class="navbar-toggler"/>

<div class="nav-scrollable" onclick="document.querySelector('.navbar-toggler').click()">
    <nav class="nav flex-column">
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="bi bi-house-door-fill-nav-menu" aria-hidden="true"></span> Home
            </NavLink>
        </div>
        
        @foreach (var eventHub in EventHubsConfigs ?? Enumerable.Empty<EventHubConfig>())
        {
            <div class="nav-item px-3">
                <NavLink class="nav-link" style="line-height: 1rem;" href="@($"eventhub/{eventHub.Id}")">
                    <span class="icon">
                        <i class="bi bi-event-hubs-nav-menu"></i>
                    </span>
                    <span class="text">
                        @eventHub.Title
                    </span>
                </NavLink>
            </div>
        }
        
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="configuration">
                <span class="bi bi-config-nav-menu" aria-hidden="true"></span> Configuration
            </NavLink>
        </div>
        
    </nav>
</div>